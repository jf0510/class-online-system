    <script src="/javascripts/navcontroller.js"></script>
    <script src="/javascripts/login.js"></script>
    <script src="/javascripts/logout.js"></script>
    <script src="/javascripts/regist.js"></script>
    <script src="/javascripts/joinroom.js"></script>
    <script src="/javascripts/createroom.js"></script>
</body>

</html>